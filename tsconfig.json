{
  "compilerOptions": {
    "outDir": "./dist",       // Where compiled JavaScript files will be placed
    "rootDir": "./",          // The root directory of your TypeScript files
    "target": "ES2020",
    "module": "commonjs",
    "esModuleInterop": true,
    "experimentalDecorators": true, // Enable decorator support
    "emitDecoratorMetadata": true,  // Emit decorator metadata
    "strict": true,
    "useDefineForClassFields": false, // Important for older versions
    "noImplicitAny": true,
    "skipLibCheck": true,
    "typeRoots": ["./types", "./node_modules/@types"]
    
  },
  "include": ["./**/*.ts"],
  "exclude": ["node_modules"]
}
